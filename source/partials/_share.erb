<%
if !current_article.title
  return
else
  # current_article: http://www.rubydoc.info/github/middleman/middleman-blog/Middleman/Blog/BlogArticle
  # current_page: http://www.rubydoc.info/gems/middleman-core/3.3.0/Middleman/Sitemap/Resource
  # frontmatter & blog: https://middlemanapp.com/basics/blogging/
  title = current_article.title
  url = "#{config[:host]}#{current_page.url}"
  summary = current_article.metadata[:page]['blurb']

  twitter_url = "https://twitter.com/intent/tweet?text=#{title}&url=#{url}&via=#{data.about_me.social.twitter.username}&related=#{data.about_me.social.twitter.username}"
  fb_url = "https://facebook.com/sharer.php?u=#{url}"
  gPlus_url = "https://plus.google.com/share?url=#{url}"
  linkedIn_url = "http://www.linkedin.com/shareArticle?mini=true&url=#{url}&title=#{title}&summary=#{summary}&source=#{url}"
  reddit_url = "http://www.reddit.com/submit?url=#{url}&title=#{title}"
end %>

<div id="social-media-share-btns">
  <span>Share: </span>
  <%= share_link data.about_me.social.twitter, twitter_url %>
  <%= share_link data.about_me.social.facebook, fb_url %>
  <%= share_link data.about_me.social.gPlus, gPlus_url %>
  <%= share_link data.about_me.social.linkedIn, linkedIn_url %>
  <%= share_link data.about_me.social.reddit, reddit_url %>
</div>
