
  <% # Use title if it's in the page YAML frontmatter
  if current_page.data.dig(:title) then
    title = current_page.data.title
  else
    title = "JTronLabs"
  end
  %>

<!doctype html>
<html xmlns="https://www.w3.org/1999/xhtml" xmlns:og="https://ogp.me/ns#" xmlns:fb="https://www.facebook.com/2008/fbml">
  <head>
    <%= partial "partials/ogp.erb", locals: {
        title: title,
        author: "James Lowrey" } %>

    <meta content="IE=edge;chrome=1" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">
    <meta name="theme-color" content="#e67e22" />

    <title><%= title %></title>

    <!-- setup feeds -->
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= partial "partials/favicon.html" %>
    <%= partial "partials/google_analytics.html" %>
    <%= partial "partials/email_subscribe_popup.erb" %>

    <!-- asset links -->
    <%= stylesheet_link_tag :syntax, :site %>
    <%= javascript_include_tag :all %>

    <%= # child layouts can inject code into the head via using content_for :head
    yield_content :head
    %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial "partials/navbar" %>

    <main>
      <%= yield %>
    </main>

    <%= partial "partials/footer.erb" %>
  </body>
</html>
